<div class=" container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to 'Home', root_path%></li>
      <li class="breadcrumb-item active">One Plus</li>
    </ol>
  </nav>
</div>

<div class= "container">
  <% @one_plus_specifications.each do |specification| %> 
    <div class="card mb-3 shadow p-3 rounded" style="max-width: 90%;">
      <div class="row no-gutters">
        <div class="col-md-2">
          <% valid_image = @index_images.find do |file|%>
            <% a = File.basename(file)%>
            <% a = a.slice(0..(a.index(".") - 1)).downcase %>
            <% b = specification.phone_name.downcase%>
            <% a == b %>
          <% end %>
          <%= image_tag "index_images/one_plus/#{File.basename(valid_image)}", class:"card-img" if valid_image %>
        </div>
        <div class="card-body">
          <h5><span class="badge badge-light">Model Name: </span> <span class="index-card-body"> <%= specification.phone_name%> </span><br> </h5>
          <h5><span class="badge badge-light">Launch Date:</span><span class="index-card-body"> <%= specification.launch_date %> </span><br></h5>
          <h5><span class="badge badge-light">Price:</span> <span class="index-card-body"><%= specification.price %></span> <br></h5>
          <h5><span class="badge badge-light">Variants:</span><span class="index-card-body"> <%= specification.variants %></span><br></h5>
          <div class= "center text-muted">
            <small>Created: <%= time_ago_in_words specification.created_at %> ago</small>
          </div>
          <div class= "center">
            <%= button_to 'Click for Detailed Review',one_plu_path(specification), class: "btn btn-dark" %>
          </div>
          <%= link_to '', one_plu_path(specification), class: "stretched-link"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
